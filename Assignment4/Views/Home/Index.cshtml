
@using Assignment4.Models;
@using Assignment4.Controllers;
@{
    ViewData["Title"] = "SOA";
}

<!--Sökbar-->
<div class="text-center">

    <form class="searchForm" action="">
        <input type="text"
               placeholder="Sök schema efter kursnamn eller kurskod.."
               name="searchBar"
               id="searchBar" />

        <button type="button"
                onclick="sendValue()"
                id="ajaxCall">

            <i class="fa fa-search"></i>
        </button>
    </form>
</div>

<div class="pt-2">

    <input type="date" id="startDate"
           value=""
           min="2015-01-01" max="2030-12-31">

    <input type="date" id="endDate"
           value=""
           min="2015-01-01" max="2030-12-31">

</div>

<!--Schematabell-->
<div class="pt-4">
    <table class="table" id="superTable" style="display:none">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Tid</th>
                <th scope="col">Lokal/plats</th>
                <th scope="col">Lärare, Student</th>
                <th scope="col">Aktivitet</th>
                <th scope="col">Kurs/Program</th>

            </tr>
        </thead>
        <tbody id="myTable">
        </tbody>
    </table>
</div>

